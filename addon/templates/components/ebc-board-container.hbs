{{#each categories as |category|}}
  {{ebc-category
    category=category
    classNames=category.classNames
    boardActions=boardActions
  }}
{{/each}}

{{#unless board.loading}}
  <div class="ebc-columns-container" style={{columnsContainerHeight}}>
    {{#each board.columns as |column|}}
      {{ebc-column
        column=column
        classNames=category.classNames
        board=board
        boardActions=boardActions
        isFixed=isFixed
        onCellClick=(action "cellClick")
      }}
    {{/each}}
  </div>
{{/unless}}
